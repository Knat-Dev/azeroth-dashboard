# Database (AC's MySQL - already exposed on host)
DB_HOST=host.docker.internal
DB_PORT=3306
DB_ROOT_PASSWORD=password

# SOAP (AC's worldserver)
# Credentials are provided per-session by the logged-in admin
SOAP_HOST=ac-worldserver
SOAP_PORT=7878

# Dashboard
JWT_SECRET=change-me-to-something-random
DASHBOARD_PORT=7780
API_PORT=7781

# Logs (path to AC server log directory on host)
AC_LOGS_DIR=../env/dist/logs

# Backups
BACKUP_RETENTION_DAYS=30
