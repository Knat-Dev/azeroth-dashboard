# Database (AC's MySQL - already exposed on host)
DB_HOST=host.docker.internal
DB_PORT=3306
DB_ROOT_PASSWORD=password

# SOAP (AC's worldserver)
SOAP_HOST=ac-worldserver
SOAP_PORT=7878
SOAP_USER=admin
SOAP_PASSWORD=admin

# Dashboard
JWT_SECRET=change-me-to-something-random
DASHBOARD_PORT=7780
API_PORT=7781

# Logs (path to AC server log directory on host)
AC_LOGS_DIR=../env/dist/logs

# Auto-Restart
AUTO_RESTART_ENABLED=true
AUTO_RESTART_COOLDOWN=10000
AUTO_RESTART_MAX_RETRIES=3
AUTO_RESTART_RETRY_INTERVAL=15000

# Crash Loop Protection
CRASH_LOOP_THRESHOLD=3
CRASH_LOOP_WINDOW=300000

# Discord Webhooks
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
WEBHOOK_EVENTS=crash,restart_failed,crash_loop,backup_success,backup_failed

# Backups
BACKUP_RETENTION_DAYS=30

# Production URLs (only set when deploying behind a reverse proxy)
# Leave commented for localhost defaults
# NEXT_PUBLIC_API_URL=https://your-domain.com/api
# CORS_ORIGIN=https://your-domain.com
